/* ---------- RENDER ---------- */
const form = document.getElementById('skillsForm');
const container = document.getElementById('formSections');
const progressBar = document.getElementById('bar');
const countText = document.getElementById('count');

const SCALE = [1,2,3,4];
let total = 0, filled = 0;

for (const [section, items] of Object.entries(SECTIONS)) {
  const sec = document.createElement('section');
  sec.className = 'section';
  const h2 = document.createElement('h2');
  h2.textContent = section;
  sec.appendChild(h2);

  items.forEach(item => {
    total++;
    const row = document.createElement('div');
    row.className = 'row';

    const label = document.createElement('div');
    label.textContent = item;

    const choices = document.createElement('div');
    choices.className = 'choices';

    SCALE.forEach(n => {
      const id = `${section}::${item}::${n}`.replace(/[^a-z0-9:_-]+/gi,'_');
      const name = `${section} — ${item}`; // nice email field name

      const wrap = document.createElement('label');
      const input = document.createElement('input');
      input.type = 'radio';
      input.name = name;
      input.value = String(n);
      input.id = id;
      input.addEventListener('change', onChange);

      const txt = document.createElement('span');
      txt.textContent = n;

      wrap.appendChild(input);
      wrap.appendChild(txt);
      choices.appendChild(wrap);
    });

    row.appendChild(label);
    row.appendChild(choices);
    sec.appendChild(row);
  });

  container.appendChild(sec);
}

updateProgress();

/* ---------- HANDLERS ---------- */
function onChange(){
  // recompute filled once per change (simple & robust)
  const uniqueNames = new Set();
  const checked = form.querySelectorAll('input[type="radio"]:checked');
  checked.forEach(i => uniqueNames.add(i.name));
  filled = uniqueNames.size;
  updateProgress();
}

function updateProgress(){
  const pct = total ? Math.round((filled/total)*100) : 0;
  progressBar.style.width = pct + '%';
  countText.textContent = `${filled} of ${total} rated (${pct}%)`;
}

/* Optional: show a success message inline after Formspree redirects back */
form.addEventListener('submit', function(){
  // Let Formspree handle the post & thank-you page.
});
</script>
